@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Quick Shopper.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                  <p style="color:darkred">
                      <br />
                      <br />
                    Start using your QuickShopper Application Now!!!
                    <a class="btn btn-default" href="">
                       Start Now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Quick Shopper.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:darkred">
                    <br />
                    <br />
                    Start using your QuickShopper Application Now!!!
                    <a class="btn btn-default" href="">
                        Start Now
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>QuickShopper</h2>
        <ul>
           <li style="font-family:'Bookman Old Style';color:grey">Have you always wanted to finish your shopping as quickly as you can.</li>
           <li style="font-family:'Bookman Old Style';color:grey">QuickShopper is your one stop solution.</li>
            <li style="font-family:'Bookman Old Style';color:grey">Choose the optimized path for your Quick shopping.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <div class="thumbnail">
            <br />
            <img src="~/images/Cart-icon.png" alt="...">
            <div class="caption">
                <h3>Choose your Items</h3>
                <li style="font-family:'Bookman Old Style';color:grey">
                    Choose the list of items from our category List and add it to your shopping cart
                 </li>           
                 <li style="font-family:'Bookman Old Style';color:grey">
                 New Items are added every Day!!!
                 </li>                
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="thumbnail">
            <br />
            <img src="~/images/Shopping-list-icon.png" alt="...">
            <div class="caption">
                <h3>Create Shopping List</h3>
                <li style="font-family:'Bookman Old Style';color:grey">
                    Add/Delete the list of Items from your Shopping List
                </li>
                <li style="font-family:'Bookman Old Style';color:grey">
                   Bookmark this Shopping list for future Reference
                 </li>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <ul>
           <div class="thumbnail">
            <br />
            <img src="~/images/Travel-Shoes-icon.png" alt="...">
            <div class="caption">
                <h3>Optimize your Path</h3>
                <li style="font-family:'Bookman Old Style';color:grey">
                    Collect your Entire Shopping List at one Go!!!
                </li>
                <li style="font-family:'Bookman Old Style';color:grey">
                 No need to run back and travel all the way if you missed your Item.
                 </li>
            </div>
        </div>
    </div>
</div>
