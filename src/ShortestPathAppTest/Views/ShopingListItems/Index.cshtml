@model IEnumerable<QuickShopper.Models.ShopingListItems>

    @{
    ViewData["Title"] = "Index";
    }

<h2 style="font-family:'Arial monospaced for SAP';color:brown">Your Shopping List</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <p style="font-family:'Arial monospaced for SAP';color:indigo">@Html.DisplayFor(modelItem => item.Item.Name)</p>
                </td>
                <td>
                    <p style="font-family:'Arial monospaced for SAP';color:indigo">@Html.DisplayFor(modelItem => item.Quantity)</p>
                </td>
                <td>
                    <p style="font-family:'Arial monospaced for SAP';color:indigo">@Html.DisplayFor(modelItem => item.UserId)</p>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a asp-controller="ShopingListItems" asp-action="Path">Get optimized path</a>